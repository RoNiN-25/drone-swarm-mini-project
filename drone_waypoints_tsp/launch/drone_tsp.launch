<?xml version="1.0"?>

<launch>

  <!-- Start Gazebo with wg world running in (max) realtime -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch"/>

  <!-- create a separate namespace for each drone -->
  <!-- drone1 in first quadrant -->
  <group ns="drone1">

    <!-- Spawn simulated quadrotor uav -->
    <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch" >
    <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/>
    <arg name="controllers" value="
    controller/attitude
    controller/velocity
    controller/position
    "/>
    <arg name="x" default="1"/>
    <arg name="y" default="1"/>
    <arg name="z" default="0.5"/>
    </include>

    <!-- unused as of now -->
    <arg name="quadrant" default="1" />

    <remap from="/cmd_vel" to="/drone1/cmd_vel" />
    <remap from="/ground_truth_to_tf/pose" to="/drone1/ground_truth_to_tf/pose" />
    <node pkg="drone_waypoints_tsp" name="controller" type="pid_controller.py" >
    </node>

  </group>

  <!-- to enable the motors -->
  <node pkg="rosservice" name="motors" type="rosservice" args="call --wait /drone1/enable_motors 'true'" />

  <!-- Start rviz visualization with preset config
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find hector_quadrotor_demo)/rviz_cfg/outdoor_flight.rviz"/>

  <include file="$(find hector_quadrotor_teleop)/launch/xbox_controller.launch" >
    <arg name="control_mode" value="position"/>
  </include>
  -->

</launch>
